---
import "../styles/global.css";
import "../theme/theme.ts";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Spin Flow - aplikacja dla trenerów tenisa stołowego do rejestracji meczów na żywo i analizy AI. Rejestruj każdy punkt w czasie rzeczywistym i otrzymuj inteligentne rekomendacje treningowe." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-surface-0 text-surface-900">
    <slot />
  </body>
</html>
